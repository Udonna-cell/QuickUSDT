extends layout

block content
    .register 
        if isSignup
            form(action="" method="post")
                article 
                    h2 Create an account 
                    p Register with email connected to faucetPay.io 

                //- referral indicator
                .referral-indicator 
                    p Invited by: 
                        span= invitee

                //- user names input field
                .names  
                    .first-name 
                        label(for="first-name") First name
                        input#first-name(type="text" name="first-name" placeholder="John", value= user ? user.firstName : "", required) 
                    .last-name 
                        label(for="last-name") last name
                        input#last-name(type="text" name="last-name" placeholder="Doe", value= user ? user.lastName : "", required)

                //- user operation username input field
                .username  
                    label(for="username") username
                    input#username(type="text" name="username" placeholder="johndoe", value= user ? user.username : "", required)

                //- email field
                .email 
                    label(for="email") email
                    input#email(type="email" name="email" placeholder="John@gmail.com", value= user ? user.email : "", autocomplete="false",  required)

                //- password field
                .password  
                    label(for="password") password
                    input#password(type="password" name="password" placeholder="password", value= user ? user.password : "", required)
                    .eye(onclick="hideShow()")

                //- confirm password field
                .confirm-password 
                    label(for="confirm-password") Confirm password
                    input#confirm-password(type="password" name="confirm-password", required)
                
                button.btn.form(type="submit") Register
                p Already have an account? 
                    a(href="/signin") Sign in
        else 
            form(action="" method="post")
                article 
                    h2 Welcome Back
                    p Login with email connected to faucetPay.io 

                //- email field
                .email 
                    label(for="email") email
                    input#email(type="email" name="email" placeholder="John@gmail.com", value= user ? user.email : "", required)

                //- password field
                .password  
                    label(for="password") password
                    input#password(type="password" name="password" placeholder="password", value= user ? user.password : "", required)
                    .eye(onclick="hideShow()")

                button.btn.form(type="submit") Login
                p Don't have an account? 
                    a(href="/register") Sign up

block script 
    script(src="/javascripts/register.js")


