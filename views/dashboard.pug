extends layout

block content 
    .dashboard
        h1.heading Dashboard
        p.subheading Welcome back, #{user.username}

        .balance-box
            span.balance-indicator
            span.balance-text Balance: 0.00001$

        input.amount-input(type="number", name="amount", placeholder="Min. 0.001")

        .action-buttons
            button.btn.deposit-btn
                |  Deposit
            button.btn.withdraw-btn
                |  Withdraw
    section.activities 
        each i in [1, 1, 2]
            .card 
                //- .logo 
                    img(src="", alt="alt")
                article 
                    h3 crypto faucet 
                    p get free cryptocurrency from a faucet 
                button.btn(onclick="active()") get started
    
    //- This is the event layout
    section.layout.hide 
        - var title = "daily bonus"
        - var detail = "claim a bonus evry day"
        - var amount = "0.002 BTC"
        - var streak = "3 / 7"
        include ./includes/event.pug